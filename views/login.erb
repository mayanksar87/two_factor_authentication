<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form action="/login" method="post">
      <% if flash[:error].present? %>
        <p class="flash-error"><%= flash[:error] %></p>
      <% end %>

      <label for="email">Email</label>
      <input type="email" id="email" name="session[email]" class="form-control">

      <br>

      <label for="password">Password</label>
      <input type="password" id="password" name="session[password]" class="form-control">

      <br>

      <input type="submit" value="Log in" class="btn btn-primary">
    </form>

    <p>New user? <a href="/signup">Sign up now!</a></p>
    <p><a href = "/forgot_password">Forget Password </a></p>
  </div>
</div>
