<div class="container text-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-4">
        <div class="card-body">
          <h2>Enter Your OTP Code</h2>

          <% if flash[:error].present? %>
            <div class="alert alert-danger">
              <%= flash[:error] %>
            </div>
          <% end %>

          <form action="/otp" method="post">
            <div class="form-group">
              <label for="otp" class="form-label">OTP Code</label>
              <input type="number" id="otp" name="otp" class="form-control" required="true" placeholder="Enter OTP Code" min="100000" max="999999">
            </div>

            <div class="mt-4">
              <input type="submit" value="Submit OTP" class="btn btn-primary btn-block">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
