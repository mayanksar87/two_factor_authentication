<div class="container text-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="mb-4">Welcome to Your App</h1>

      <% if @user.nil? %>
        <div class="alert alert-info">
          <p>
            Please
            <a href="/login">Log In</a>
            or
            <a href="/signup">Sign up</a>
          </p>
        </div>
      <% else %>
        <div class="card mt-4">
          <div class="card-body">
            <h2>Hello, <%= @user.email %>!</h2>

            <% if @user.otp_enabled %>
              <p>Your account is secured with OTP.</p>
              <br>
              <span class="badge badge-success">OTP Enabled</span>
              <br>
              <a href="/disable_2fa" class="btn btn-primary">Disable 2 factor authentication</a>
              <br>
            <% else %>
              <p>Your account is not yet secured with OTP.</p>
              <br>
              <a href="/enable_2fa" class="btn btn-primary">Enable 2 factor authentication</a>
              <br>
            <% end %>

            <a href="/logout" class="btn btn-primary">Log Out</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
